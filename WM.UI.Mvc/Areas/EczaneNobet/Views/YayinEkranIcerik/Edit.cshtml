@model YayinEkranIcerikDetay

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Yayın Ekran Düzenle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.EkranIcerikId, "EkranIcerikId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EkranIcerikId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EkranIcerikId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.YayinEkranId, "YayinEkranId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("YayinEkranId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.YayinEkranId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-4">
            @*@Html.LabelFor(model => model.AcilisTarihi, htmlAttributes: new { @class = "control-label" })*@
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text p-2">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </span>
                </div>
                @Html.TextBoxFor(model => model.BaslamaZamani, new { @class = "form-control datepicker p-2", autocomplete = "off", placeHolder = "Başlama Zamanı" })
            </div>
            @Html.ValidationMessageFor(model => model.BaslamaZamani, "", new { @class = "text-danger" })
        </div>


        <div class="form-group col-md-4">
            @*@Html.LabelFor(model => model.AcilisTarihi, htmlAttributes: new { @class = "control-label" })*@
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text p-2">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </span>
                </div>
                @Html.TextBoxFor(model => model.BitisZamani, new { @class = "form-control datepicker p-2", autocomplete = "off", placeHolder = "Bitiş Zamanı" })
            </div>
            @Html.ValidationMessageFor(model => model.BitisZamani, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-outline-primary" />
                @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-warning" })
            </div>
        </div>
    </div>
}

