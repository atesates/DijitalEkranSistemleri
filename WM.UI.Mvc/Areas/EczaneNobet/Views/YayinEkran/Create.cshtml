@model WM.Northwind.Entities.Concrete.EczaneNobet.YayinEkran

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Yayın Ekran Oluştur</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.EkranId, "Ekran", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EkranId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EkranId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.EkranTasarimId, "Ekran Tasarım", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EkranTasarimId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EkranTasarimId, "", new { @class = "text-danger" })
        </div>
    </div>


    @*@Html.LabelFor(model => model.AcilisTarihi, htmlAttributes: new { @class = "control-label" })*@
    <div class="form-group col-md-4">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text p-2">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                </span>
            </div>
            @Html.TextBoxFor(model => model.BaslamaZamani, new { @class = "form-control datetimepicker", autocomplete = "off", placeHolder = "Başlama Zamanı:  2019.03.25 22:55" })
        </div>
        @Html.ValidationMessageFor(model => model.BaslamaZamani, "", new { @class = "text-danger" })
    </div>





    <div class="form-group col-md-4">
        @*@Html.LabelFor(model => model.AcilisTarihi, htmlAttributes: new { @class = "control-label" })*@
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text p-2">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                </span>
            </div>
            @Html.TextBoxFor(model => model.BitisZamani, new { @class = "form-control datetimepicker", autocomplete = "off", placeHolder = "Bitiş Zamanı:        2019.03.25 22:55" })
        </div>
        @Html.ValidationMessageFor(model => model.BitisZamani, "", new { @class = "text-danger" })
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-sm btn-primary" />
            @Html.ActionLink("Listeye Dön", "Index", null, new { @class = "btn btn-sm btn-warning" })
        </div>
    </div>

    <div class="col-10">
        @if (TempData["MessageSuccess"] != null)
        {
            @*<p>&nbsp;</p>*@
            <div class="alert alert-success">
                <i class="fa fa-info-circle fa-x"></i>
                @TempData["MessageSuccess"]
            </div>
        }
        @if (TempData["MessageDanger"] != null)
        {
            <div class="alert alert-danger">
                <i class="fa fa-info-circle fa-x"></i>
                @TempData["MessageDanger"]
            </div>
        }
    </div>
</div>
}
@section Styles{
    @Styles.Render("~/bundle/bootstrap-datepicker/style")
}
@section Scripts{
    @Scripts.Render("~/bundle/bootstrap-datepicker/scripts")
    @Scripts.Render("~/bundle/ajax")
    <script>
   
    </script>
}
