<script>
    var osmaniyeEkranlar = @Html.Raw(Json.Encode(ViewBag.Osmaniye));
    var zonguldakEkranlar = @Html.Raw(Json.Encode(ViewBag.Zonguldak));

    var ctx2 = document.getElementById("myChart");
    var myChart = new Chart(ctx2, {
        type: 'bar',
        data: {
            labels: ["Ekran", "Cihaz", "Monitor"],
            datasets: [{
                //label: 'Eleman Sayısı',
                data: osmaniyeEkranlar,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    //'rgba(75, 192, 192, 0.2)',
                    //'rgba(153, 102, 255, 0.2)',
                    //'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    //'rgba(75, 192, 192, 1)',
                    //'rgba(153, 102, 255, 1)',
                    //'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

    var ctx3 = document.getElementById("myChartAntalya");
    var myChart2 = new Chart(ctx3, {
        type: 'bar',
        data: {
            labels: ["Ekran", "Cihaz", "Monitor"],
            datasets: [{
               // label: 'Ekipman Sayısı',
                data: zonguldakEkranlar,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>
